<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/menuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_48"
        android:text="아메리카노(Ice)"
        android:textSize="@dimen/text_size_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/hazelnutOptionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_32"
        android:text="헤이즐넛 시럽"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/hazelnutPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500원"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toBottomOf="@id/hazelnutOptionsTextView"
        app:layout_constraintEnd_toStartOf="@+id/hazelnutMinusImageView"
        app:layout_constraintStart_toEndOf="@id/hazelnutOptionsTextView"
        app:layout_constraintTop_toTopOf="@id/hazelnutOptionsTextView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/hazelnutMinusImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="@dimen/margin_8"
        android:src="@drawable/square_minus"
        app:layout_constraintBottom_toBottomOf="@id/hazelnutOptionsTextView"
        app:layout_constraintEnd_toStartOf="@id/hazelnutCountTextView"
        app:layout_constraintTop_toTopOf="@id/hazelnutOptionsTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/hazelnutCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        android:text="1"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toBottomOf="@id/hazelnutOptionsTextView"
        app:layout_constraintEnd_toStartOf="@id/hazelnutPlusImageView"
        app:layout_constraintTop_toTopOf="@id/hazelnutOptionsTextView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/hazelnutPlusImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="@dimen/margin_32"
        android:src="@drawable/square_plus"
        app:layout_constraintBottom_toBottomOf="@id/hazelnutOptionsTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/hazelnutOptionsTextView" />

    <View
        android:id="@+id/divider1"
        style="@style/option_divider_style"
        android:layout_marginTop="@dimen/margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hazelnutOptionsTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/perlOptionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_16"
        android:text="펄 추가"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/perlPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500원"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toBottomOf="@id/perlOptionsTextView"
        app:layout_constraintEnd_toEndOf="@+id/hazelnutPriceTextView"
        app:layout_constraintStart_toStartOf="@+id/hazelnutPriceTextView"
        app:layout_constraintTop_toTopOf="@id/perlOptionsTextView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/perlMinusImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="@dimen/margin_8"
        android:src="@drawable/square_minus"
        app:layout_constraintBottom_toBottomOf="@id/perlOptionsTextView"
        app:layout_constraintEnd_toStartOf="@id/perlCountTextView"
        app:layout_constraintTop_toTopOf="@id/perlOptionsTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/perlCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        android:text="1"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toBottomOf="@id/perlOptionsTextView"
        app:layout_constraintEnd_toStartOf="@id/perlPlusImageView"
        app:layout_constraintTop_toTopOf="@id/perlOptionsTextView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/perlPlusImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="@dimen/margin_32"
        android:src="@drawable/square_plus"
        app:layout_constraintBottom_toBottomOf="@id/perlOptionsTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/perlOptionsTextView" />

    <View
        android:id="@+id/divider2"
        style="@style/option_divider_style"
        android:layout_marginTop="@dimen/margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/perlOptionsTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vanillaOptionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_16"
        android:text="바닐라 시럽"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vanillaPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="700원"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toBottomOf="@id/vanillaOptionsTextView"
        app:layout_constraintEnd_toEndOf="@+id/hazelnutPriceTextView"
        app:layout_constraintStart_toStartOf="@+id/hazelnutPriceTextView"
        app:layout_constraintTop_toTopOf="@id/vanillaOptionsTextView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/vanillaMinusImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="@dimen/margin_8"
        android:src="@drawable/square_minus"
        app:layout_constraintBottom_toBottomOf="@id/vanillaOptionsTextView"
        app:layout_constraintEnd_toStartOf="@id/vanillaCountTextView"
        app:layout_constraintTop_toTopOf="@id/vanillaOptionsTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vanillaCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        android:text="1"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toBottomOf="@id/vanillaOptionsTextView"
        app:layout_constraintEnd_toStartOf="@id/vanillaPlusImageView"
        app:layout_constraintTop_toTopOf="@id/vanillaOptionsTextView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/vanillaPlusImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="@dimen/margin_32"
        android:src="@drawable/square_plus"
        app:layout_constraintBottom_toBottomOf="@id/vanillaOptionsTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/vanillaOptionsTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>