<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bottom_sheet_r20"
    app:behavior_expandedOffset="@dimen/offset_100"
    app:behavior_fitToContents="false"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/peak_200"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/drawImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_drop_up_36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/kioskListRecyclerView"
        android:layout_width="@dimen/full_charge"
        android:layout_height="@dimen/full_charge"
        app:layout_constraintBottom_toTopOf="@+id/guideLine"
        app:layout_constraintEnd_toStartOf="@id/totalAmountTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawImageView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/totalAmountTextView"
        android:layout_width="@dimen/full_charge"
        android:layout_height="@dimen/full_charge"
        android:layout_marginStart="@dimen/margin_32"
        android:gravity="center"
        android:text="총 결제금액 \n\t\t 1500원"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintBottom_toTopOf="@id/allCancelButton"
        app:layout_constraintEnd_toStartOf="@id/chargeImageView"
        app:layout_constraintStart_toEndOf="@id/kioskListRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/drawImageView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/allCancelButton"
        android:layout_width="@dimen/full_charge"
        android:layout_height="@dimen/full_charge"
        android:layout_marginStart="@dimen/margin_32"
        app:layout_constraintBottom_toTopOf="@id/guideLine"
        app:layout_constraintEnd_toStartOf="@id/chargeImageView"
        app:layout_constraintTop_toBottomOf="@id/totalAmountTextView"
        app:layout_constraintStart_toEndOf="@id/kioskListRecyclerView"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chargeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideLine"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_32"
        app:layout_constraintStart_toEndOf="@id/totalAmountTextView"
        app:layout_constraintTop_toBottomOf="@id/drawImageView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="@dimen/full_charge"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>