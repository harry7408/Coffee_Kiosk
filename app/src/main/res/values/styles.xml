<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="kiosk_main_button_style" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="strokeColor">@color/text_icon_color</item>
        <item name="strokeWidth">@dimen/stroke_2</item>
        <item name="android:textColor">@color/text_icon_color</item>
        <item name="android:radius">@dimen/full_charge</item>

    </style>

    <style name="bottom_cancel_button_style" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">@dimen/stroke_2</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:radius">@dimen/full_charge</item>

    </style>

    <style name="bottom_ok_button_style" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">@dimen/stroke_2</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/text_icon_color</item>
        <item name="android:radius">@dimen/full_charge</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Button.Corner">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="category_text_style">
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:layout_width">@dimen/full_charge</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/margin_8</item>
        <item name="android:paddingEnd">@dimen/margin_8</item>
        <item name="android:paddingTop">@dimen/margin_4</item>
        <item name="android:paddingBottom">@dimen/margin_4</item>

    </style>

    <style name="option_divider_style">
        <item name="android:layout_marginStart">@dimen/margin_24</item>
        <item name="android:layout_marginEnd">@dimen/margin_24</item>
        <item name="android:layout_width">@dimen/full_charge</item>
        <item name="android:layout_height">@dimen/stroke_2</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="join_number_style">
        <item name="android:layout_width">@dimen/full_charge</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_button_stroke_black</item>
    </style>

    <style name="alert_dialog_theme">
        <item name="android:textSize">@dimen/text_size_30</item>
    </style>

    <style name="chip_style">
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

</resources>