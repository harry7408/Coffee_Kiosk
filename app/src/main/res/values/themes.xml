<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Coffee_Kiosks" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
    </style>

    <style name="Theme.Coffee_Kiosks" parent="Base.Theme.Coffee_Kiosks" />

    <style name="Theme.Coffee_Kiosks.Splash" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/text_icon_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash </item>
        <item name="windowSplashScreenAnimationDuration">@integer/splash_loading_time</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Coffee_Kiosks</item>
    </style>
</resources>